<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/dummy_news_02"
    android:scaleType="centerCrop"/>
    <ImageView

        android:id="@+id/iv_login_user"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_margin="@dimen/margin_xlarge"
        android:src="@drawable/dummy_user_picture" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_login_user"
        android:layout_toRightOf="@+id/iv_login_user"
        android:text="Veronica"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_3x" />

    <TextView
        android:id="@+id/tv_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/margin_small"
        android:text="09123467"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular" />

    <Button
        android:id="@+id/btn_logout"
        style="@style/AccentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_medium_2"/>
</RelativeLayout>